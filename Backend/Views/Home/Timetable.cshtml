@model IEnumerable<WebApp1.Models.VisitAvailability>

@using System.Collections.Generic;

@{
    ViewData["Title"] = "Timetable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Timetable</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Monday  
            </th>
            <th>
                Tuesday
            </th>
            <th>
                Wednesday
            </th>
            <th>
                Thursday
            </th>
            <th>
                Friday
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count() / 5; i++)
        {
            <tr>
                @for (int j = 0; j < 5; j++)
                {
                    await Html.RenderPartialAsync("_VisitAvailabilityPartial", Model.ElementAt(i + (Model.Count() / 5) * j));
                }
            </tr>
        }
    </tbody>
</table>
