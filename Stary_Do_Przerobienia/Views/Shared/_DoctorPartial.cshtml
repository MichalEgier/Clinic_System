@{
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<PatientAccount> SignInManager
@inject UserManager<PatientAccount> UserManager

@model Doctor
<tr>
    <td>
        Id=@Model.DoctorID
    </td>
    <td>
        Name=@Model.Name
    </td>
    <td>
        Surname=@Model.Surname
    </td>
    <td>
        Title=@Model.Title
    </td>
    <td>
        Specializations=@Model.CommaSeparatedSpecializations
    </td>
    <td>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            
            @Html.ActionLink(" --Details-- ", "Details", "AdminController", new { id = Model.DoctorID });
            
            @Html.ActionLink(" --Delete-- ", "Delete", "AdminController", new { id = Model.DoctorID });
            
            @Html.ActionLink(" --Edit-- ", "Edit", "AdminController", new { id = Model.DoctorID });
            
        }

    </td>
</tr>